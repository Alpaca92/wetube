extends base

block content
  if errorMessage
    span=errorMessage

  form(method="POST")
    input(type="email", name="email", required, placeholder="type your email")
    input(type="password", name="password", required, placeholder="type your password")
    input(type="password", name="confirmPassword", required, placeholder="type your password again")
    input(type="text", name="name", required, placeholder="type your name")
    input(type="text", name="username", required, placeholder="type your username")
    input(type="text", name="location", placeholder="type your location if you want")
    input(type="submit", value="JOIN")
  hr

  div
    span Already have an account? 
    a(href="/login") Login now &rarr;