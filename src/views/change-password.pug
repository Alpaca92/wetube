extends templates/base

block content
  if errorMessage
    span= errorMessage
  form(method="post")
    input(
      name="currentPassword",
      type="password",
      placeholder="Current Password",
      required
    )
    input(
      name="newPassword",
      type="password",
      placeholder="New Password",
      required
    )
    input(
      name="newPasswordConfirmation",
      type="password",
      placeholder="New Password Confirmation",
      required
    )
    input(type="submit", value="Change password")
